@page "/show-network-requests"
@model ShowNetworkRequestsModel
@{
}

@section Meta {
    <title>
        Loggade anrop -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

<main>

    <h4>
        Loggade anrop
    </h4>

    <div class="notice">
        <ul>
            <li>
                ➡️
                &thinsp;
                <a href="/show-network-request-urls">URL:er</a>
            </li>
            <li>
                ➡️
                &thinsp;
                <a href="/show-network-request-user-agents">Agenter</a>
            </li>
            <li>
                ➡️
                &thinsp;
                <a href="/show-network-request-ip-addresses">IP-adresser</a>
            </li>
        </ul>
    </div>

    <h5>
        Anrop
    </h5>

    <div class="notice" >

        <ul>
            @foreach (var request in Model.NetworkRequests)
            {
                <li>
                    <a href="/show-network-request/@(request.Id)">
                        @(request.Created.ToFixedFormatDateShortTime())
                    </a>
                    <br />
                    @(request.Method)
                    &thinsp;
                    @(request.Url)
                    <br />
                    @(request.IpAddress)
                    <br />
                    <br />
                </li>
            }

            @if (!Model.NetworkRequests.Any())
            {
                <li>
                    🛑
                    &thinsp;
                    &ndash;
                </li>
            }
        </ul>

    </div>

    <p>
        <a class="button" href="/remove-network-requests">
            Ta bort
        </a>
    </p>

</main>
