@page "/show-network-user-agents"
@model ShowBlockedUserAgentsModel
@{
}

@section Meta {
    <title>
        Blockerade agenter -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

<main>

    <h4>
        Blockerade agenter
    </h4>

    <div class="notice">
        <ul>
            @if (!Model.UserAgents.Any())
            {
                <li>
                    🛑
                    &thinsp;
                    &ndash;
                </li>
            }
            @foreach (var agent in Model.UserAgents)
            {
                <li>
                    🛑
                    &thinsp;
                    @(agent)
                </li>
            }
        </ul>
    </div>

</main>
