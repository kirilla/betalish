@page "/edit-network-rule/{id:int}"
@model EditNetworkRuleModel
@{
}

@section Meta {
    <title>
        Redigera IP-adressintervall -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

<main>
    <h4>
        Redigera IP-adressintervallet:
        @(Model.NetworkRule.BaseAddress)/@(Model.NetworkRule.PrefixLength)
    </h4>

    <form method="post">

        <input type="hidden" asp-for="CommandModel.Id" />

        <label asp-for="CommandModel.BaseAddress">Basadress</label>
        <input asp-for="CommandModel.BaseAddress" placeholder="192.168.0.1" />

        <label asp-for="CommandModel.PrefixLength">Prefix</label>
        <input asp-for="CommandModel.PrefixLength" placeholder="1-128" />

        <p>
            <label asp-for="CommandModel.Active">
                <input asp-for="CommandModel.Active" type="checkbox" />
                Aktiv
            </label>

            <label asp-for="CommandModel.Block">
                <input asp-for="CommandModel.Block" type="checkbox" />
                Blockera
            </label>

            <label asp-for="CommandModel.Log">
                <input asp-for="CommandModel.Log" type="checkbox" />
                Logga
            </label>
        </p>

        <label asp-for="CommandModel.Description">Anteckning</label>
        <input asp-for="CommandModel.Description" />

        <div asp-validation-summary="All"></div>

        <button type="submit">
            Spara
        </button>

        <a class="button" href="/show-network-rule/@(Model.NetworkRule.Id)">
            Avbryt
        </a>
    </form>

</main>
