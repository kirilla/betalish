@page "/show-network-rule/{id:int}"
@model ShowNetworkRuleModel
@{
}

@section Meta {
    <title>IP-adressintervall - @(Branding.WebsiteTitle)</title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

<main>

    <p class="breadcrumbs">
        <a href="/show-admin-desktop">Desktop</a>
        &raquo;
        <a href="/show-network-rules">IP-addressintervall</a>
        &raquo;
        @(Model.NetworkRule.NetworkCidr)
    </p>

    <h4>
        IP-adressintervall
    </h4>

    <div class="notice">
        <b>@(Model.NetworkRule.NetworkCidr)</b>
        <br />
        <br />
        @if (Model.NetworkRule.Active)
        {
            <span>✅ Aktiv</span>
        }
        else
        {
            <span>⏸️ Deaktiverad</span>
        }

        <br />
        @if (Model.NetworkRule.Block)
        {
            <span>⛔ Blockera</span>
        }
        else
        {
            <span>💚 Tillåt</span>
        }

        <br />
        @if (Model.NetworkRule.Log)
        {
            <span>✍️ Logga</span>
        }
        else
        {
            <span>❌ Logga inte</span>
        }

        @if (Model.NetworkRule.Description != null)
        {
            <br />
            <br />
            <span>@(Model.NetworkRule.Description)</span>
        }
    </div>

    <p>
        <a class="button" href="/edit-network-rule/@(Model.NetworkRule.Id)">
            Redigera adressen
        </a>

        <a class="button" href="/remove-network-rule/@(Model.NetworkRule.Id)">
            Ta bort adressen
        </a>
    </p>

</main>
