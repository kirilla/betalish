@page "/show-client-events-for-client/{id:int}"
@model ShowClientEventsForClientModel
@{
}

@section Meta {
    <title>
        Klienthändelser -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

<main>

    <h4>
        Klienthändelser för @(Model.Client.Name)
    </h4>

    <div class="notice" >

        <ul>
            @foreach (var item in Model.ClientEvents)
            {
                <li>
                    @(item.Created.ToFixedFormatDateShortTime())
                    <br />
                    @(item.Client.Name)
                    <br />
                    @(item.Description ?? item.ClientEventKind.ToString())
                    @if (item.IpAddress != null)
                    {
                        <br />
                        <span>
                            @(item.IpAddress)
                        </span>
                    }
                    <br />
                    <br />
                </li>
            }

            @if (!Model.ClientEvents.Any())
            {
                <li>
                    🗒️
                    &thinsp;
                    &ndash;
                </li>
            }
        </ul>

    </div>

</main>
