@page "/add-invoice-template"
@model AddInvoiceTemplateModel
@{
}

@section Meta {
    <title>
        Ny mall -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

@await Html.PartialAsync("/Pages/Clients/_Shared/_InvoiceTemplate.cshtml", Model.UserToken)

<main>
    <h4>
        Ny mall
    </h4>

    <form method="post">

        <label asp-for="CommandModel.Name">
            Namn
        </label>
        <input asp-for="CommandModel.Name"
               placeholder="Internt" />

        <label asp-for="CommandModel.About">
            Sammanfattning
        </label>
        <input asp-for="CommandModel.About"
               placeholder="Visas för mottagaren" />

        <div asp-validation-summary="All"></div>

        <button type="submit">
            Skapa
        </button>

        <a class="button" href="/show-invoice-templates">
            Avbryt
        </a>
    </form>

</main>
