@page "/show-invoices"
@model ShowInvoicesModel
@{
}

@section Meta {
    <title>
        Fakturor -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

@* @section Style {
    <style>
        body {
            grid-template-columns: 1fr min(70rem, 90%) 1fr;
        }
    </style>
} *@

<main>

    <h4>
        Fakturor
    </h4>

    <figure>
        <table>
            <tr>
                <th>Id</th>
            </tr>
            @foreach (var invoice in Model.Invoices)
            {
                <tr>
                    <td>
                        @(invoice.Id)
                    </td>
                </tr>
            }
            @if (!Model.Invoices.Any())
            {
                <tr>
                    <td colspan="1">
                        Inga
                    </td>
                </tr>
            }
        </table>
    </figure>

    <p>
        <a class="button" href="/add-invoice">
            Lägg till
        </a>
    </p>

</main>
