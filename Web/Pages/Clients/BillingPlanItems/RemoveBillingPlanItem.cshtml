@page "/remove-billing-plan-item/{id:int}"
@model RemoveBillingPlanItemModel
@{
}

@section Meta {
    <title>
        Ta bort händelse ur tidsplan -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

@await Html.PartialAsync("/Pages/Clients/_Shared/_BillingPlan.cshtml", Model.UserToken)

<main>
    <h4>
        Ta bort händelse ur tidsplan
        <span class="muted">@(Model.BillingPlan.Name)</span>
    </h4>

    <form method="post">

        <input type="hidden" asp-for="CommandModel.Id" />

        <p>
            <label asp-for="CommandModel.Confirmed">
                <input asp-for="CommandModel.Confirmed" type="checkbox" />
                Ja, jag är säker
            </label>
        </p>

        <div asp-validation-summary="All"></div>

        <button type="submit">
            Ta bort
        </button>

        <a class="button" href="/show-billing-plan/@(Model.BillingPlan.Id)">
            Avbryt
        </a>
    </form>

</main>
