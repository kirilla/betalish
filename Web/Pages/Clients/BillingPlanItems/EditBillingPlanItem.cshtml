@page "/edit-billing-plan-item/{id:int}"
@model EditBillingPlanItemModel
@{
}

@section Meta {
    <title>
        Redigera rad -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

@await Html.PartialAsync("/Pages/Clients/_Shared/_BillingPlan.cshtml", Model.UserToken)

<main>
    <h4>
        Redigera händelse i tidsplan
        <span class="muted">@(Model.BillingPlan.Name)</span>
    </h4>

    <form method="post">

        <input type="hidden" asp-for="CommandModel.Id" />

        <label asp-for="CommandModel.OnDay">
            Dag nummer
        </label>
        <input asp-for="CommandModel.OnDay" placeholder="Antal dagar efter faktardatum" />

        <div asp-validation-summary="All"></div>

        <button type="submit">
            Spara
        </button>

        <a class="button" href="/show-billing-plan/@(Model.BillingPlan.Id)">
            Avbryt
        </a>
    </form>

</main>
