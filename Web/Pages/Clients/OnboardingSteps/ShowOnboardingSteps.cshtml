@page "/show-onboarding-steps"
@model ShowOnboardingStepsModel
@{
}

@section Meta {
    <title>
        Onboarding-steg -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

@* @section Style {
    <style>
        body {
            grid-template-columns: 1fr min(70rem, 90%) 1fr;
        }
    </style>
} *@

<main>

    <h4>
        Kom igång!
    </h4>

    <ul class="notice">
        @foreach (var step in Model.OnboardingSteps)
        {
            <li>
                @if (step.Done)
                {
                    <span>✅</span>
                }
                else
                {
                    <span>❓</span>
                }

                @switch (step.OnboardingStepKind)
                {
                    case OnboardingStepKind.InvoiceRange:
                        <span>Planera fakturanummer</span>
                        break;
                }

            </li>
        }
    </ul>

    @if (Model.UserToken.IsAdmin)
    {
        <p>
            <a class="button" href="/add-onboarding-step">
                Lägg till
            </a>
        </p>
    }

</main>
