@page "/add-payment-terms"
@model AddPaymentTermsModel
@{
    var dayRangePlaceholder =
        $"{Defaults.Invoice.PaymentTermDays.Min}-" +
        $"{Defaults.Invoice.PaymentTermDays.Max} dagar";
}

@section Meta {
    <title>
        Nya betalvillkor -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

@await Html.PartialAsync("/Pages/Clients/_Shared/_PaymentTerms.cshtml", Model.UserToken)

<main>
    <h4>
        Nya betalvillkor
    </h4>

    <form method="post">

        <label asp-for="CommandModel.Name">
            Namn
        </label>
        <input asp-for="CommandModel.Name" />

        <p>
            <label asp-for="CommandModel.Reminder">
                <input asp-for="CommandModel.Reminder" type="checkbox" />
                Påminnelse
            </label>

            <label asp-for="CommandModel.Demand">
                <input asp-for="CommandModel.Demand" type="checkbox" />
                Inkassokrav
            </label>

            <label asp-for="CommandModel.Collect">
                <input asp-for="CommandModel.Collect" type="checkbox" />
                KFM-ansökan
            </label>
        </p>

        <label asp-for="CommandModel.PaymentTermDays">
            Betalvillkor, antal dagar
        </label>
        <input asp-for="CommandModel.PaymentTermDays" 
            placeholder="@(dayRangePlaceholder)" />

        <label asp-for="CommandModel.MinToConsiderPaid">
            Accepterad underbetalning, kr
        </label>
        <input asp-for="CommandModel.MinToConsiderPaid" />

        <p>
            <label asp-for="CommandModel.Interest">
                <input asp-for="CommandModel.Interest" type="checkbox" />
                Dröjsmålsränta
            </label>
        </p>

        <div asp-validation-summary="All"></div>

        <button type="submit">
            Lägg till
        </button>

        <a class="button" href="/show-all-payment-terms">
            Avbryt
        </a>
    </form>

</main>
