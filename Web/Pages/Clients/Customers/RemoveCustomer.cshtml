@page "/remove-customer/{id:int}"
@model RemoveCustomerModel
@{
}

@section Meta {
    <title>
        Ta bort kund -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

<main>
    <h4>
        Ta bort kund:
        @(Model.Customer.EmailAddress)
    </h4>

    <form method="post">

        <input type="hidden" asp-for="CommandModel.Id" />

        <p>
            <label asp-for="CommandModel.Confirmed">
                <input asp-for="CommandModel.Confirmed" type="checkbox" />
                Ja, jag är säker
            </label>
        </p>

        <div asp-validation-summary="All"></div>

        <button type="submit">
            Ta bort
        </button>

        <a class="button" href="/show-customer/@(Model.CommandModel.Id)">
            Avbryt
        </a>
    </form>

</main>
