@page "/add-article"
@model AddArticleModel
@{
}

@section Meta {
    <title>
        Lägg till artikel -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

@await Html.PartialAsync("/Pages/Clients/_Shared/_Articles.cshtml", Model.UserToken)

<main>
    <h4>
        Lägg till en artikel
    </h4>

    <form method="post">

        <label asp-for="CommandModel.Number">
            Artikelnummer
        </label>
        <input asp-for="CommandModel.Number" placeholder="10" />

        <label asp-for="CommandModel.Name">
            Namn
        </label>
        <input asp-for="CommandModel.Name" 
            placeholder="Varans eller tjänstens namn" />

        <label asp-for="CommandModel.UnitPrice">
            Pris
        </label>
        <input asp-for="CommandModel.UnitPrice" placeholder="20,00" />

        <label asp-for="CommandModel.UnitName">
            Per enhet
        </label>
        <input asp-for="CommandModel.UnitName" 
            placeholder="kilogram, liter, styck, ..." />

        <label asp-for="CommandModel.VatRate">
            Momssats %
        </label>
        <input asp-for="CommandModel.VatRate" placeholder="25,00" />

        <label asp-for="CommandModel.ArticleKind">
            Typ
        </label>
        <select asp-for="CommandModel.ArticleKind">
            <option value="">–</option>
            <option value="@(ArticleKind.Goods)">
                Vara
            </option>
            <option value="@(ArticleKind.Service)">
                Tjänst
            </option>
        </select>

        <label asp-for="CommandModel.RevenueAccount">
            Intäktskonto
        </label>
        <input asp-for="CommandModel.RevenueAccount" placeholder="0000" />

        <label asp-for="CommandModel.VatAccount">
            Moms-konto
        </label>
        <input asp-for="CommandModel.VatAccount" placeholder="0000" />

        <div asp-validation-summary="All"></div>

        <button type="submit">
            Lägg till
        </button>

        <a class="button" href="/show-articles">
            Avbryt
        </a>
    </form>

</main>
