@page "/edit-article-accounting/{id:int}"
@model EditArticleAccountingModel
@{
}

@section Meta {
    <title>
        Redigera kontering -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

@await Html.PartialAsync("/Pages/Clients/_Shared/_Articles.cshtml", Model.UserToken)

<main>
    <h4>
        Redigera
    </h4>

    <h5>
        @(Model.Article.Number)
        @(Model.Article.Name)
        <br />
        @(Model.Article.VatRate.ToSwedish()) %
    </h5>

    <form method="post">

        <input type="hidden" asp-for="CommandModel.Id" />

        <label asp-for="CommandModel.RevenueAccount">
            Intäktskonto
        </label>
        <input asp-for="CommandModel.RevenueAccount" />

        <label asp-for="CommandModel.VatAccount">
            Moms-konto
        </label>
        <input asp-for="CommandModel.VatAccount" />

        <div asp-validation-summary="All"></div>

        <button type="submit">
            Spara
        </button>

        <a class="button" href="/show-article-accounting">
            Avbryt
        </a>
    </form>

</main>
