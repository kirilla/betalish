@page "/show-articles"
@model ShowArticlesModel
@{
}

@section Meta {
    <title>
        Artiklar -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

@* @section Style {
    <style>
        body {
            grid-template-columns: 1fr min(70rem, 90%) 1fr;
        }
    </style>
} *@

<main>

    <h4>
        Artiklar
    </h4>

    <div class="notice">

        <ul>
            @foreach (var article in Model.Articles)
            {
                <li>
                    @(article.Number)
                    @* 📦 *@
                    <a href="/show-article/@(article.Id)">@(article.Name)</a>
                </li>
            }

            @if (!Model.Articles.Any())
            {
                <li>
                    📦
                    &thinsp;
                    &ndash;
                </li>
            }
        </ul>

    </div>

    <p>
        <a class="button" href="/add-article">
            Lägg till
        </a>
    </p>

</main>
