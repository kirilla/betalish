@page "/show-ledger-accounts"
@model ShowLedgerAccountsModel
@{
}

@section Meta {
    <title>
        Bokföringskonton -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

@await Html.PartialAsync("/Pages/Clients/_Shared/_Articles.cshtml", Model.UserToken)

<main>

    <h4>
        Bokföringskonton
    </h4>

    <figure>
        <table>
            <tr>
                <th>Konto</th>
                <th>Beskrivning</th>
                <th></th>
            </tr>
            @foreach (var account in Model.LedgerAccounts)
            {
                <tr>
                    <td>
                        <a href="/edit-ledger-account/@(account.Id)" class="nolink">
                            @(account.Account)
                        </a>
                    </td>
                    <td>
                        <a href="/edit-ledger-account/@(account.Id)" class="nolink">
                            @(account.Description)
                        </a>
                    </td>
                    <td>
                        <a href="/edit-ledger-account/@(account.Id)" class="nolink">
                            ✏️
                        </a>
                        <a href="/remove-ledger-account/@(account.Id)" class="nolink">
                            ❌
                        </a>
                    </td>
                </tr>
            }
            @if (!Model.LedgerAccounts.Any())
            {
                <tr>
                    <td colspan="2">
                        Inga
                    </td>
                </tr>
            }
        </table>
    </figure>

    <p>
        <a class="button" href="/add-ledger-account">
            Lägg till
        </a>
    </p>

</main>
