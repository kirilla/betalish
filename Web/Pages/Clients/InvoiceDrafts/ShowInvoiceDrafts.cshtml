@page "/show-invoice-drafts"
@model ShowInvoiceDraftsModel
@{
}

@section Meta {
    <title>
        Fakturautkast -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

@* @section Style {
    <style>
        body {
            grid-template-columns: 1fr min(70rem, 90%) 1fr;
        }
    </style>
} *@

<main>

    <h4>
        Fakturautkast
    </h4>

    <figure>
        <table>
            <tr>
                <th>Id</th>
                <th>Kund</th>
            </tr>
            @foreach (var draft in Model.InvoiceDrafts)
            {
                <tr>
                    <td>
                        <a href="/show-invoice-draft/@(draft.Id)">
                            @(draft.Id)
                        </a>
                    </td>
                    <td>
                        @(draft.Customer.Name)
                    </td>
                </tr>
            }
            @if (!Model.InvoiceDrafts.Any())
            {
                <tr>
                    <td colspan="2">
                        Inga
                    </td>
                </tr>
            }
        </table>
    </figure>

    <p>
        <a class="button" href="/add-invoice-draft">
            Lägg till
        </a>
    </p>

</main>
