@page "/edit-billing-strategy/{id:int}"
@model EditBillingStrategyModel
@{
}

@section Meta {
    <title>
        Redigera strategi -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

@await Html.PartialAsync("/Pages/Clients/_Shared/_BillingStrategy.cshtml", Model.UserToken)

<main>
    <h4>
        Redigera
        <span class="muted">
            &thinsp;
            @(Model.BillingStrategy.Name)
        </span>
    </h4>

    <form method="post">

        <input type="hidden" asp-for="CommandModel.Id" />

        <label asp-for="CommandModel.Name">
            Namn
        </label>
        <input asp-for="CommandModel.Name" />

        <p>
            <label asp-for="CommandModel.Interest">
                <input asp-for="CommandModel.Interest" type="checkbox" />
                Dröjsmålsränta
            </label>

            <label asp-for="CommandModel.Reminder">
                <input asp-for="CommandModel.Reminder" type="checkbox" />
                Påminnelse
            </label>

            <label asp-for="CommandModel.Demand">
                <input asp-for="CommandModel.Demand" type="checkbox" />
                Inkassokrav
            </label>

            <label asp-for="CommandModel.Collect">
                <input asp-for="CommandModel.Collect" type="checkbox" />
                KFM-ansökan
            </label>
        </p>

        <label asp-for="CommandModel.MinToConsiderPaid">
            Anse fakturan betald om skulden understiger
        </label>
        <input asp-for="CommandModel.MinToConsiderPaid" />

        <div asp-validation-summary="All"></div>

        <button type="submit">
            Spara
        </button>

        <a class="button" href="/show-billing-strategy/@(Model.BillingStrategy.Id)">
            Avbryt
        </a>
    </form>

</main>
