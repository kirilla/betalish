@page "/show-invoice-ranges"
@model ShowInvoiceRangesModel
@{
}

@section Meta {
    <title>
        Fakturanummer -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

@* @section Style {
    <style>
        body {
            grid-template-columns: 1fr min(70rem, 90%) 1fr;
        }
    </style>
} *@

<main>

    <h4>
        Fakturanummer
    </h4>

    <figure>
        <table>
            <tr>
                <th>Fakturanummer</th>
                <th>Startdatum</th>
                <th>Slutdatum</th>
                <th>Anteckning</th>
                <th></th>
            </tr>
            @foreach (var range in Model.InvoiceRanges)
            {
                <tr>
                    <td>
                        <a href="/edit-invoice-range/@(range.Id)">
                            @(range.StartNumber)-
                            @(range.EndNumber)
                        </a>
                    </td>
                    <td>
                        @(range.StartDate?.ToIso8601() ?? "*")
                    </td>
                    <td>
                        @(range.EndDate?.ToIso8601() ?? "*")
                    </td>
                    <td>
                        @(range.Comment ?? "-")
                    </td>
                    <td>
                        <a href="/show-invoice-range/@(range.Id)">
                            visa mer
                        </a>
                    </td>
                </tr>
            }
            @if (!Model.InvoiceRanges.Any())
            {
                <tr>
                    <td colspan="8">
                        Inga
                    </td>
                </tr>
            }
        </table>
    </figure>

    <p>
        <a class="button" href="/add-invoice-range">
            Lägg till
        </a>
    </p>

</main>
