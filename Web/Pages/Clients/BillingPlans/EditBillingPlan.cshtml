@page "/edit-billing-plan/{id:int}"
@model EditBillingPlanModel
@{
}

@section Meta {
    <title>
        Redigera tidsplan -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

@await Html.PartialAsync("/Pages/Clients/_Shared/_BillingPlan.cshtml", Model.UserToken)

<main>
    <h4>
        Redigera
        <span class="muted">
            &thinsp;
            @(Model.BillingPlan.Name)
        </span>
    </h4>

    <form method="post">

        <input type="hidden" asp-for="CommandModel.Id" />

        <label asp-for="CommandModel.Name">
            Namn
        </label>
        <input asp-for="CommandModel.Name" />

        <div asp-validation-summary="All"></div>

        <button type="submit">
            Spara
        </button>

        <a class="button" href="/show-billing-plan/@(Model.BillingPlan.Id)">
            Avbryt
        </a>
    </form>

</main>
