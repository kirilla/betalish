@page "/sign-in-by-phone"
@model SignInByPhoneModel
@{
}

@section Meta {
    <title>
        Logga in med telefonnummer -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

<main>
    <h4>
        Logga in med telefonnummer
    </h4>

    <br />
    <form method="post">

        <p>
            <input asp-for="CommandModel.PhoneNumber" 
                placeholder="ditt nummer" />
            <br />
            <input asp-for="CommandModel.Password"
                type="password" placeholder="ditt lösenord" />
        </p>

        <div asp-validation-summary="All"></div>

        <button type="submit">
            Logga in
        </button>

    </form>

</main>
