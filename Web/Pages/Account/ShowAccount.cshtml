@page "/show-account"
@model ShowAccountModel
@{
}

@section Meta {
    <title>
        Ditt konto -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

<main>
    <h4>
        Ditt konto
    </h4>

    <div class="notice">

        <h5>
            Namn
        </h5>

        <p>
            🐵
            &ensp;
            @(Model.User.Name)
            <br />
            #️⃣
            &ensp;
            @(Model.User.Ssn12.ToSsnWithDash())
        </p>
        
        @if (Model.CanEditAccount)
        {
            <p>
                <a class="button" href="/edit-account">
                    Ändra
                </a>
            </p>
        }

        <h5>
            Epost
        </h5>

        @if (Model.UserEmails.Any())
        {
            <p>
                @foreach (var email in Model.UserEmails)
                {
                    <span>
                        📧
                        &ensp;
                        @(email.Address)
                    </span>
                    <br />
                }
            </p>
        }
        else
        {
            <p>
                📧
                &ensp;
                &ndash;
            </p>
        }

        <p>
            @if (Model.CanAddUserEmail)
            {
                <a class="button" href="/add-account-email">
                    Lägg till
                </a>
            }

            @if (Model.CanRemoveUserEmail &&
                Model.UserEmails.Count > 1)
            {
                <a class="button" href="/remove-account-email">
                    Ta bort
                </a>
            }
        </p>

        <h5>
            Telefon
        </h5>

        @if (Model.UserPhones.Any())
        {
            <p>
                @foreach (var phone in Model.UserPhones)
                {
                    <span>
                        📞
                        &ensp;
                        @(phone.Number)
                    </span>
                    <br />
                }
            </p>
        }
        else
        {
            <p>
                📞
                &ensp;
                &ndash;
            </p>
        }

        <p>
            @if (Model.CanAddAccountPhone)
            {
                <a class="button" href="/add-account-phone">
                    Lägg till
                </a>
            }

            @if (Model.CanRemoveAccountPhone)
            {
                <a class="button" href="/remove-account-phone">
                    Ta bort
                </a>
            }
        </p>

    </div>

    <p>
        @if (Model.CanChangePassword)
        {
            <a class="button" href="/change-password">
                Ändra lösenord
            </a>
        }

        @if (Model.CanDeleteAccount)
        {
            <a class="button" href="/delete-account">
                Ta bort konto
            </a>
        }
    </p>

</main>
