@page "/delete-account"
@model DeleteAccountModel
@{
}

@section Meta {
    <title>
        Ta bort kontot? - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="_Navbar" model="Model.UserToken" />
}

<main>
    <h4>
        Vill du ta bort ditt konto?
    </h4>

    <form method="post">

        <p>
            <label asp-for="CommandModel.Confirmed">
                <input asp-for="CommandModel.Confirmed" type="checkbox" />
                Ja, jag är säker
            </label>
        </p>

        <div asp-validation-summary="All"></div>

        <button type="submit">
            Ta bort
        </button>

        <a class="button" href="/show-account">
            Avbryt
        </a>

    </form>

</main>
